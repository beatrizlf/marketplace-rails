<%= simple_form_for(@auction) do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :category, collection: Auction::CATEGORIES %>
  <%= f.input :min_price %>
  <%= f.input :deadline %>
  <%= f.input :photos, as: :file, input_html: { multiple: true } %>
  <%= f.submit class: 'btn btn-primary' %>
<% end %>

<div class="d-flex justify-content-center flex-wrap mb-3">
  <div class="card m-2 card-main" style="width: 22rem;">
    <div class="card-image">
      
      <% if auction.photos.any? %>
        <%= cl_image_tag auction.photos.first.key, class: 'card-img-top' %>
      <% else %>
        <img class="card-img-top" src="https://res.cloudinary.com/diarvpaib/image/upload/v1614176532/img2_uo6kq7.jpg">
      <% end %>
      
    </div>
    <div class="card-body">
      <a class="card-link card-title">
        <h5 class="card-title"><%= auction.name %></h5>
        <p>This figure is from <%= auction.category %>. <%= auction.description %>.</p>
      </a>
      <hr>
      <div class="d-flex">
        <%= link_to 'See details', auction_path(auction) %>
        <p class="pricetag mt-1">USD <%= auction.min_price %></p>
      </div>
    </div>
  </div>
</div>

<div class='container'>
  <h1>Welcome</h1>
  <%= link_to 'Edit', edit_user_registration_path, class:'btn btn-primay' %>


  <h3><%= current_user.first_name %> <%= current_user.last_name %></h3>
  <p>Email: <%= current_user.email %></p>
  <p>Endereço: <%= current_user.address %></p>

  <div>
    <% if cl_image_tag @user.photo.attached? %>
      <%= image_tag @user.photo, height: 300, width: 400, crop: :fill %>
    <% end %>
  </div>

  <h3>Você tem <%= @auctions.count %> produtos à venda</h3>

  <h3>Histórico de compras</h3>
  <% current_user.bids.where(winning_bid: true).each do |bid| %>
    <p><%= bid.auction.name %></p>
    <p><%= bid.auction.description %></p>
    <p><%= bid.value %></p>
  <% end %>
</div>


<div>
  <% if current_user.photo.attached? %>
    <%= cl_image_tag @user.photo.key, height: 300, width: 400, crop: :fill %>
  <% end %>
</div>



<% current_user.bids.where(winning_bid: true).each do |bid| %>
  <p><%= bid.auction.name %></p>
  <p><%= bid.auction.description %></p>
  <p><%= bid.value %></p>
<% end %>



